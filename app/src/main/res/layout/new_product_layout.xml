<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView android:layout_height="100dp"
        android:layout_width="100dp"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_gravity="center"
        android:id = "@+id/imgViewCamera"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product name :"
            android:textColor="#0099cc"
            android:textSize="20dp"
            android:paddingRight="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/editTextProductName"
            android:hint="product name "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price :"
            android:textColor="#0099cc"
            android:textSize="20dp"
            android:paddingRight="10dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free"
            android:checked="true"
            android:id = "@+id/checkBoxFree"
            android:paddingRight="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:id = "@+id/editTextPrice"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description :"
            android:textColor="#0099cc"
            android:textSize="20dp"
            android:paddingRight="10dp"/>
        <EditText
            android:maxLines="5"
            android:minLines="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/editTextDescription"
            android:hint="description here "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity :"
            android:textColor="#0099cc"
            android:textSize="20dp"
            android:paddingRight="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/editTextQuantity"
            android:hint="quantity "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit :"
            android:textColor="#0099cc"
            android:textSize="20dp"
            android:paddingRight="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/editTextUnit"
            android:hint="unit "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category ID :"
            android:textColor="#0099cc"
            android:textSize="20dp"
            android:paddingRight="10dp"/>
       <Spinner
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:id = "@+id/spinnerCategory"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add"
            android:id = "@+id/btnAdd"
            android:textColor="#0099cc"
            android:textSize="20dp"
          />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:id = "@+id/btnCancel"
            android:textColor="#0099cc"
            android:textSize="20dp"
            />
    </LinearLayout>
</LinearLayout>