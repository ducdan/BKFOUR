<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	 <com.example.vinh.bkfour.Utility.CircleButton
            android:id="@+id/myCircle"
            android:layout_width="@dimen/circleWidth"
            android:layout_height="@dimen/circleHeight"
            android:layout_marginTop="30dip"
            android:layout_marginBottom="@dimen/circleBottom"
            android:layout_gravity="center"
            />

	<TextView
	    android:id="@+id/myText"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:paddingLeft="20dip"
	    android:paddingRight="20dip"
	    android:textColor="#6A6F75"
	    android:textSize="@dimen/bodyTextSize" />

</LinearLayout>
